{
    "title": "Storage manifest (local)",
    "type": "object",
    "required": ["signer", "type", "container_path", "path"],
    "properties": {
        "signer": { "$ref": "types.json#fingerprint" },
        "type": { "const": "local" },
        "container_path": { "$ref": "types.json#abs_path" },
        "path": {
            "oneOf": [
                {"$ref": "types.json#abs_path"},
                {"$ref": "types.json#rel_path"}
            ],
            "description": "Path in the local filesystem (can be relative to manifest document)"
        }
    },
    "additionalProperties": false
}
