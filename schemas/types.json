{
    "abs_path": {
        "type": "string",
        "description": "Absolute path",
        "pattern": "^/.*$"
    },
    "rel_path": {
        "type": "string",
        "description": "Relative path",
        "pattern": "^[^/].*$"
    },
    "http_url": {
        "type": "string",
        "description": "HTTP(S) address",
        "pattern": "^https?://.*$"
    },
    "url": {
        "oneOf": [
            { "$ref": "#/abs_path" },
            { "$ref": "#/rel_path" },
            { "$ref": "#/http_url" }
        ]
    },
    "fingerprint": {
        "type": "string",
        "description": "Public key fingerprint (in '0xcoffee' format)",
        "pattern": "^0x[0-9a-f]+$"
    }
}
