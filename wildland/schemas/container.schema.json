{
    "title": "Container manifest",
    "type": "object",
    "required": ["signer", "paths", "backends"],
    "dependencies": {
        "categories": ["title"]
    },
    "properties": {
        "signer": { "$ref": "types.json#fingerprint" },
        "paths": {
            "type": "array",
            "items": { "$ref": "types.json#abs-path" },
            "minItems": 1,
            "description": "list of paths for this container, should start with a unique /.uuid/UUID path"
        },
        "title": {
            "type": ["string", "null"],
            "description": "Title of the container."
        },
        "categories": {
            "type": "array",
            "items": { "$ref": "types.json#abs-path" },
            "minItems": 0,
            "description": "list of categories for this container. Requires title property."
        },
        "backends": {
            "type": "object",
            "required": ["storage"],
            "properties": {
                "storage": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            { "$ref": "types.json#url" },
                            { "$ref": "storage.schema.json" }
                        ]
                    },
                    "description": "list of storage backend URLs, or inlined storage manifests"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
