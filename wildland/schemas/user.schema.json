{
    "title": "User manifest",
    "type": "object",
    "required": ["signer", "paths"],
    "properties": {
        "signer": { "$ref": "types.json#fingerprint" },
        "paths": {
            "type": "array",
            "items": { "$ref": "types.json#abs-path" },
            "minItems": 1,
            "description": "list of paths for this user"
        },
        "containers": {
            "type": "array",
            "items": { "$ref": "types.json#url" },
            "description": "deprecated alias for infrastructure-containers"
        },
        "infrastructure-containers": {
            "type": "array",
            "items": { "$ref": "types.json#url" },
            "description": "list of container URLs (for finding this user's manifests)"
        }
    },
    "additionalProperties": false
}
