{
    "abs-path": {
        "type": "string",
        "description": "Absolute path",
        "pattern": "^/.*$"
    },
    "rel-path": {
        "type": "string",
        "description": "Relative path",
        "pattern": "^[^/].*$"
    },
    "http-url": {
        "type": "string",
        "description": "HTTP(S) address",
        "pattern": "^https?://.*$"
    },
    "file-url": {
        "type": "string",
        "description": "File URL, possibly with hostname",
        "pattern": "^file://[^/]*/.*$"
    },
    "url": {
        "oneOf": [
            { "$ref": "#/http-url" },
            { "$ref": "#/file-url" }
        ]
    },
    "fingerprint": {
        "type": "string",
        "description": "Public key fingerprint (in '0xcoffee' format)",
        "pattern": "^0x[0-9a-f]+$"
    }
}
