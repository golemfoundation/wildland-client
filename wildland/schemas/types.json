{
    "abs_path": {
        "type": "string",
        "description": "Absolute path",
        "pattern": "^/.*$"
    },
    "rel_path": {
        "type": "string",
        "description": "Relative path",
        "pattern": "^[^/].*$"
    },
    "http_url": {
        "type": "string",
        "description": "HTTP(S) address",
        "pattern": "^https?://.*$"
    },
    "file_url": {
        "type": "string",
        "description": "File URL, possibly with hostname",
        "pattern": "^file://[^/]*/.*$"
    },
    "url": {
        "oneOf": [
            { "$ref": "#/http_url" },
            { "$ref": "#/file_url" }
        ]
    },
    "fingerprint": {
        "type": "string",
        "description": "Public key fingerprint (in '0xcoffee' format)",
        "pattern": "^0x[0-9a-f]+$"
    }
}
