{
    "abs-path": {
        "type": "string",
        "description": "absolute path",
        "pattern": "^/.*$"
    },
    "rel-path": {
        "type": "string",
        "description": "relative path",
        "pattern": "^[^/].*$"
    },
    "http-url": {
        "type": "string",
        "description": "HTTP(S) address",
        "pattern": "^https?://.*$"
    },
    "file-url": {
        "type": "string",
        "description": "file:// URL",
        "pattern": "^file://[^/]*/.*$"
    },
    "url": {
        "description": "HTTP or file URL",
        "oneOf": [
            { "$ref": "#/http-url" },
            { "$ref": "#/file-url" }
        ]
    },
    "url-or-relpath": {
        "description": "URL or relative path",
        "oneOf": [
            { "$ref": "#/url" },
            { "$ref": "#/rel-path" }
        ]
    },
    "fingerprint": {
        "type": "string",
        "description": "fingerprint",
        "pattern": "^0x[0-9a-f]+$"
    }
}
